<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_mother_tongue_form" model="ir.ui.view">
            <field name="name">mother.tongue.lang.form</field>
            <field name="model">mother.tongue.lang</field>
            <field name="arch" type="xml">
                <form string="Mother Information">
                    <sheet>
                        <group colspan="2" col="2">
                            <group>
                                <field name="name"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_mother_tongue_details_tree" model="ir.ui.view">
            <field name="name">mother.tongue.lang.Tree</field>
            <field name="model">mother.tongue.lang</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_mother_tongue_management">
            <field name="name">Mother Language</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mother.tongue.lang</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>